package com.plugtree.dsrl

expander dslExample.dsl

declare Customer
    expense: Double
    registered: Boolean
end

rule "expense greater than 1000"
when
	There is a customer
	-The customer with expense greater than 1000
then
	calculate a 10% discount
end

rule "Customer registered"
when
	There is a customer
	-The customer is registered
then
	calculate a 5% discount
end

function Double getDiscount(Double expense, Double discount){
    return (expense * discount) / 100;
}

